<body>
  <div class="wrap">
    <a class="back" href="index.html">← Back</a>

    <div class="card">
      <div class="q" id="qText">...</div>
      <div class="a" id="qAuthor">...</div>
      <div class="story" id="qStory">...</div>
      <div id="qSource" style="margin-top:14px;opacity:.75;font-weight:700;"></div>
    </div>
  </div>

  <script src="quotes.js"></script>
  <script>
    const params = new URLSearchParams(location.search);
    const id = params.get("id");
    const q = window.QUOTES.find(x => x.id === id) || window.QUOTES[0];

    document.getElementById("qText").textContent = q.text;
    document.getElementById("qAuthor").textContent = q.author;
    document.getElementById("qStory").textContent = q.story;

    const src = document.getElementById("qSource");
    if(q.sourceUrl){
      src.innerHTML = `Source: <a href="${q.sourceUrl}" target="_blank" rel="noreferrer">${q.sourceLabel || q.sourceUrl}</a>`;
    } else {
      src.textContent = q.sourceLabel ? `Source: ${q.sourceLabel}` : "";
    }
  </script>
