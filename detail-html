  <style>
    body{margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial;background:#f7f1e6;color:#111}
    .wrap{max-width:480px;margin:0 auto;min-height:100vh;padding:24px}
    .back{display:inline-block;margin-top:10px;font-weight:800;opacity:.8}
    .card{background:#fff;border-radius:18px;padding:18px;margin-top:18px;box-shadow:0 6px 16px rgba(0,0,0,.08)}
    .q{font-family:Georgia,serif;font-size:30px;line-height:1.1;font-weight:700}
    .a{margin-top:10px;font-weight:900;letter-spacing:.12em}
    .story{margin-top:14px;line-height:1.5;opacity:.9}
